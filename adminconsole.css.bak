.container {
  width: 400px;
  padding: 20px;
  border: 1px solid #ccc;
  margin: 50px auto;
  text-align: center;
}

form {
  text-align: left;
}

label {
  display: block;
  margin-bottom: 5px;
}

input[type="text"],
input[type="password"] {
  width: 100%;
  padding: 8px;
  margin-bottom: 15px;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-radius: 4px;
}

button {
  background-color: #4CAF50;
  color: white;
  padding: 10px 15px;
  border: none;
  cursor: pointer;
  border-radius: 4px;
}

button:hover {
  background-color: #3e8e41;
}

 body {
	margin: 0;
	font-family: 'Poppins', sans-serif;
}
.bgimage {
   background-image: url("./image/background_image.jpg");
   background-repeat: no-repeat;
   background-size: cover;
   height: 100vh;
   display: flex;
   justify-content: center;
   align-items: center;
   flex-direction: coloumn;
   text-align: center;
   color: black;
  }
   
.menu {
  overflow: hidden;
  background-color: #85c1e9;
}

.menu a {
	float: left;
	display: block;
	color: #f2f2f2;
	text-align: center;
	padding: 14px 16px;
	text-decoration: none;
	font-size: 17px;
}

.menu a:hover {
	background-color: #D6EAF8;
	color: black;
}

.menu a.active {
	background-color: #2E86C1;
	color: white;
}

.menu .icon {
	display: none;
}

@media screen and (max-width: 600px) {
	.menu a:not(:first-child) {display: none;}
	.menu a.icon {
	 float: right;
	 display: block;
	}
}

@media screen and (max-width: 600px) {
	.menu.responsive {position: relative;}
	.menu.responsive .icon {
		position: absolute;
		right: 0;
		top: 0;
	}
	.menu.responsive a{
	 float: none;
	 display: block;
	 text-align: left;
	}
}